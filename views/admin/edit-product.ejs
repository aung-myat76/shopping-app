<%- include('../partials/head') %>
    </head>
    <body>
        <main >
            <header>
                <%- include('../partials/nav', {isLoggedIn: isLoggedIn}) %>
            </header>
            <div class="center">
                <div>
                    <h1>Edit Product</h1>
                </div>
                <form action="/admin/edit-product" method="post">
                    <input type="hidden" name="productId" value="<%= product._id %>" />
                    <input type="text" name="title" placeholder="Product name" class="input" value="<%= product.title %>"/> <br />
                    <input type="number" name="price" placeholder="Price" class="input" value="<%= product.price %>"/> <br />
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <textarea name="description" placeholder="Detail" class="input"><%= product.description %></textarea> <br />
                    <button type="submit">Update</button>
                </form>
            </div>
        </main>
<%- include('../partials/end') %>
 