<%- include('../partials/head') %>
<style>.product-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
    padding: 0;
    list-style: none;
}

.product-card {
    background-color: #fff;
    border: 1px solid #eee;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
    padding: 1rem;
    text-align: center;
    transition: transform 0.2s ease;
}

.product-card:hover {
    transform: translateY(-5px);
}

/* Image Styling */
.product-card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 6px;
    margin-bottom: 0.8rem;
}

/* Title */
.product-card h2 {
    font-size: 1.1rem;
    color: #333;
    margin: 0.5rem 0 1rem 0;
}

/* Actions */
.product-card .actions {
    display: flex;
    justify-content: center;
    gap: 0.8rem;
}

.product-card a {
    color: #007BFF;
    text-decoration: none;
    font-weight: 600;
}

.product-card a:hover {
    color: #0056b3;
}

.product-card button {
    background-color: #dc3545;
    color: white;
    border: none;
    padding: 0.4rem 0.8rem;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.9rem;
}

.product-card button:hover {
    background-color: #c82333;
}

/* âœ… Responsive widths */
.product-card {
    width: 80%; /* default for small screens */
}

@media (min-width: 768px) {
    .product-card {
        width: 45%; /* medium screens */
    }
}

@media (min-width: 1024px) {
    .product-card {
        width: 33%; /* large screens */
    }
}
</style>
</head>

<body>
    <main>
        <header>
            <%- include('../partials/nav', { isLoggedIn: isLoggedIn }) %>
        </header>

        <div class="center">

            <% if (products.length > 0) { %>
                <ul class="product-grid">
                    <% for (let product of products) { %>
                        <li class="product-card">
                            <img src="/<%= product.image %>" alt="<%= product.title %>" />
                            <h2><%= product.title %></h2>
                            <div class="actions">
                                <a href="/admin/edit-product?productId=<%= product._id %>">Edit</a>
                                <form action="/admin/delete-product" method="post">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                    <input type="hidden" name="productId" value="<%= product._id %>" />
                                    <button type="submit">Delete</button>
                                </form>
                            </div>
                        </li>
                    <% } %>
                </ul>


            <% } else { %>
                <div class="empty-message">
                    <h2>There's no products...</h2>
                </div>
            <% } %>
        </div>
    </main>
<%- include('../partials/end') %>
