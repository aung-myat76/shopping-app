<%- include('../partials/head') %>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    main {
        padding: 2rem;
    }

    header {
        margin-bottom: 2rem;
    }

    .product-detail {
        max-width: 600px;
        margin: 0 auto;
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
    }

    .product-detail h2 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #333;
        text-align: center;
    }

    .product-detail .price {
        font-size: 1.4rem;
        color: #007BFF;
        font-weight: bold;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .product-detail p {
        font-size: 1rem;
        line-height: 1.6;
        color: #555;
        text-align: justify;
    }
</style>
</head>

<body>
    <main>
        <header>
            <%- include('../partials/nav', { isLoggedIn: isLoggedIn }) %>
        </header>

        <div class="product-detail">
            <h2><%= product.title %></h2>
            <div class="price">$<%= product.price.toFixed(2) %></div>
            <p><%= product.description %></p>
        </div>
    </main>
<%- include('../partials/end') %>
