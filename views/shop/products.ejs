<%- include('../partials/head') %>
<style>body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f9f9f9;
}

main {
    padding: 2rem;
}

header {
    margin-bottom: 2rem;
}

.center {
    max-width: 1200px;
    margin: 0 auto;
    background-color: #fff;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
}

h1 {
    margin-bottom: 1rem;
    font-size: 2rem;
    text-align: center;
    color: #333;
}

hr {
    margin-bottom: 2rem;
}

/* ✅ GRID Layout */
.product-grid {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
}

.product-card {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    text-align: center;
    padding: 1rem;
    transition: transform 0.2s ease;
    width: 80%; /* default for small screens */
}

.product-card:hover {
    transform: translateY(-5px);
}

/* ✅ Image styling */
.product-card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 6px;
    margin-bottom: 0.8rem;
}

.product-card h2 {
    margin: 0.5rem 0 0.3rem;
    font-size: 1.25rem;
    color: #222;
}

.product-card strong {
    display: block;
    color: #007BFF;
    font-size: 1.1rem;
    margin-bottom: 0.8rem;
}

/* ✅ Actions */
.product-card .actions {
    display: flex;
    justify-content: center;
    gap: 0.8rem;
}

.product-card a {
    text-decoration: none;
    color: #007BFF;
    font-weight: 600;
}

.product-card a:hover {
    text-decoration: underline;
}

.product-card form {
    display: inline;
}

.product-card button {
    background-color: #28a745;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s ease;
}

.product-card button:hover {
    background-color: #218838;
}

/* ✅ Responsive widths */
@media (min-width: 768px) {
    .product-card {
        width: 45%;
    }
}

@media (min-width: 1024px) {
    .product-card {
        width: 33%;
    }
}

.empty {
    text-align: center;
    color: #666;
    margin-top: 2rem;
}
</style>
</head>

<body>
    <main>
        <header>
            <%- include('../partials/nav', { isLoggedIn: isLoggedIn }) %>
        </header>

        <div class="center">
            
            <% if (products.length > 0) { %>
                <ul class="product-grid">
                    <% for (let product of products) { %>
                        <li class="product-card">
                            <img src="/<%= product.image %>" alt="<%= product.title %>">
                            <h2><%= product.title %></h2>
                            <strong>$<%= product.price.toFixed(2) %></strong>
                            <div class="actions">
                                <a href="/products/<%= product._id %>">Detail</a>
                                <% if (isLoggedIn) { %>
                                    <form action="/add-cart" method="post">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                        <input type="hidden" name="productId" value="<%= product._id %>" />
                                        <button type="submit">Add to Cart</button>
                                    </form>
                                <% } %>
                            </div>
                        </li>
                    <% } %>
                </ul>
            <% } else { %>
                <h2 class="empty">There's no products...</h2>
            <% } %>
        </div>

    </main>
    <%- include('../partials/end') %>




